<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.cevex</groupId>
	<artifactId>easyevent</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>easyevent Maven Webapp</name>

	<url>http://maven.apache.org</url>

	<!-- ##################################################### -->
	<!-- Properties -->
	<!-- ##################################################### -->

	<properties>
		<jdk.version>1.8</jdk.version>

		<spring.version>4.3.0.RELEASE</spring.version>
		<hsqldb.version>1.8.0.10</hsqldb.version>

		<servlet.api.version>3.1.0</servlet.api.version>

		<junit.version>4.12</junit.version>
		<hamcrest.version>1.3</hamcrest.version>
		<mockito.version>1.9.5</mockito.version>

		<json.path.version>0.8.1</json.path.version>
		<jackson.version>2.4.4</jackson.version>

		<slf4j.version>1.7.9</slf4j.version>
	</properties>

	<!-- ##################################################### -->
	<!-- Dependances -->
	<!-- ##################################################### -->

	<dependencies>
		<!-- Spring-test : Initialiser le contexte Spring pour pouvoir utiliser 
			l'injection des dépendances -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<version>${spring.version}</version>
			<scope>test</scope>
		</dependency>


		<!-- Hamcrest : pour assertion des résultats des tests -->
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-all</artifactId>
			<version>${hamcrest.version}</version>
			<scope>test</scope>
		</dependency>

		<!-- Jsonpath : pour tester les flux JSON du Web service -->
		<dependency>
			<groupId>com.jayway.jsonpath</groupId>
			<artifactId>json-path</artifactId>
			<version>${json.path.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.jayway.jsonpath</groupId>
			<artifactId>json-path-assert</artifactId>
			<version>${json.path.version}</version>
			<scope>test</scope>
		</dependency>

		<!-- Dependance du Framework de test : Junit -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<artifactId>hamcrest-core</artifactId>
					<groupId>org.hamcrest</groupId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>

	<!-- ##################################################### -->
	<!-- Build Configuration -->
	<!-- ##################################################### -->

	<build>
		<finalName>easyevent</finalName>
		<plugins>

			<!-- Configuration du plugin de compilation -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.2</version>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
				</configuration>
			</plugin>

			<!-- Configuration du plugin de génération du war -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
